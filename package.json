{
  "private": true,
  "workspaces": [
    "theme",
    "demo"
  ],
  "devDependencies": {
    "@testing-library/cypress": "^5.3.0",
    "@types/node": "^12.7.5",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-helmet": "^5.0.11",
    "@types/testing-library__cypress": "^5.0.3",
    "@types/theme-ui": "^0.3.0",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "concurrently": "^4.1.2",
    "cross-env": "^7.0.0",
    "cypress": "^4.0.2",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-mdx": "^1.6.8",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "gatsby-cypress": "^0.2.22",
    "prettier": "^1.18.2",
    "start-server-and-test": "^1.10.8",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "info": "gatsby info --clipboard",
    "dev": "yarn run clean:demo && yarn run dev:demo",
    "build": "yarn run clean:demo && yarn run build:demo",
    "serve": "yarn workspace demo serve",
    "type-check": "tsc --noEmit",
    "cy:open": "cypress open",
    "cy:run": "cross-env CYPRESS_baseUrl=http://localhost:9000 cypress run",
    "tsc:compile": "tsc --project cypress/tsconfig.json",
    "tsc:compile:watch": "tsc --watch --project cypress/tsconfig.json",
    "e2e:dev": "concurrently --kill-others 'yarn tsc:compile:watch' 'yarn ssat:demo:dev'",
    "e2e:ci": "yarn tsc:compile && yarn demo:cy:build && yarn ssat:demo:serve",
    "clean:demo": "yarn workspace demo clean",
    "dev:demo": "yarn workspace demo develop -H 0.0.0.0",
    "build:demo": "yarn workspace demo build",
    "format:demo": "prettier 'demo/**/*.{json,md,mdx}'",
    "format:demo:write": "prettier 'demo/**/*.{json,md,mdx}' --write",
    "lint:demo": "eslint --ignore-path .gitignore './demo' --ext ts --ext tsx --ext js --ext jsx --ext mdx",
    "lint:demo:fix": "yarn lint:demo --fix",
    "demo:cy:dev": "yarn workspace demo develop:cypress",
    "demo:cy:build": "yarn workspace demo build:cypress",
    "demo:serve": "yarn workspace demo serve",
    "ssat:demo:dev": "start-server-and-test demo:cy:dev http://localhost:8000 cy:open",
    "ssat:demo:serve": "start-server-and-test demo:serve http://localhost:9000 cy:run",
    "lint:theme": "eslint --ignore-path .gitignore './theme' --ext ts --ext tsx --ext js --ext jsx --ext mdx",
    "lint:theme:fix": "yarn lint:theme --fix",
    "format:theme": "prettier 'theme/**/*.{json,md,mdx}'",
    "format:theme:write": "prettier 'theme/**/*.{json,md,mdx}' --write"
  }
}
